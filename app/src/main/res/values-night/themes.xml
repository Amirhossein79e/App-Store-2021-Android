<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AppStore" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/md_blue_grey_900</item>
        <item name="colorPrimaryVariant">@color/md_blue_900</item>
        <item name="colorOnPrimary">@color/md_blue_A200</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/md_blue_grey_700</item>
        <item name="colorSecondaryVariant">@color/md_blue_900</item>
        <item name="colorOnSecondary">@color/md_blue_A200</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/md_blue_grey_900</item>
        <item name="android:windowLightStatusBar" tools:targetApi="m">false</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/shabnam</item>
        <item name="rippleColor">@color/md_blue_A400</item>
    </style>


    <style name="btn_style">
        <item name="android:background">@drawable/btn_selector</item>
        <item name="android:textColor">@color/md_white_1000</item>
        <item name="textAllCaps">false</item>
        <item name="android:elevation">@dimen/dp8</item>
    </style>

</resources>
<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/dp8"
    android:layout_marginBottom="@dimen/dp8"
    app:cardBackgroundColor="@color/colorSecondary"
    app:cardCornerRadius="@dimen/dp16"
    app:cardElevation="@dimen/dp1">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp16">


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp40"
            android:layout_height="@dimen/dp40"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:srcCompat="@drawable/ic_account"
            android:id="@+id/img">
        </androidx.appcompat.widget.AppCompatImageView>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toEndOf="@id/img"
            app:layout_constraintTop_toTopOf="@id/img"
            app:layout_constraintBottom_toBottomOf="@id/img"
            android:layout_marginStart="@dimen/dp8"
            android:textSize="@dimen/text_size_small_normal"
            android:text="Amirhossein79"
            android:id="@+id/txt_name">
        </androidx.appcompat.widget.AppCompatTextView>


        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/dp48"
            android:layout_height="@dimen/dp48"
            app:layout_constraintTop_toTopOf="@id/img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/img"
            app:srcCompat="@drawable/ic_star"
            app:tint="@color/md_yellow_A400"
            android:id="@+id/img_star">
        </androidx.appcompat.widget.AppCompatImageView>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/dp0"
            android:layout_height="@dimen/dp0"
            app:layout_constraintTop_toTopOf="@id/img_star"
            app:layout_constraintStart_toStartOf="@id/img_star"
            app:layout_constraintEnd_toEndOf="@id/img_star"
            app:layout_constraintBottom_toBottomOf="@id/img_star"
            android:paddingTop="@dimen/dp2"
            android:gravity="center"
            android:textColor="@color/md_yellow_A400"
            android:textSize="@dimen/text_size_small_normal"
            app:fontFamily="@font/shabnam_bold"
            android:id="@+id/txt_rate">
        </androidx.appcompat.widget.AppCompatTextView>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="@dimen/dp0"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/img_star"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:textSize="@dimen/text_size_small_normal"
            android:layout_marginTop="@dimen/dp12"
            android:id="@+id/txt_comment">
        </androidx.appcompat.widget.AppCompatTextView>


    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>
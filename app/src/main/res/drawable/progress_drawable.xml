<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:id="@android:id/background">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/dp6"> </corners>
            <solid android:color="@color/colorSecondary"> </solid>
        </shape>
    </item>

    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape android:shape="rectangle">
                <corners android:radius="@dimen/dp6"> </corners>
                <gradient android:type="linear" android:angle="135" android:startColor="@color/colorOnPrimary" android:endColor="@color/md_blue_A100"> </gradient>
                <stroke android:width="@dimen/dp1" android:color="@color/colorSecondary"> </stroke>
            </shape>
        </clip>
    </item>

    <item android:id="@android:id/progress">
        <clip>
           <shape android:shape="rectangle">
               <corners android:radius="@dimen/dp6"> </corners>
               <gradient android:type="linear" android:angle="45" android:startColor="@color/colorOnPrimary" android:endColor="@color/md_blue_A100"> </gradient>
               <stroke android:width="@dimen/dp1" android:color="@color/colorSecondary"> </stroke>
           </shape>
        </clip>
    </item>

</layer-list>
<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android"
    android:enterFadeDuration="@integer/material_motion_duration_medium_2"
    android:exitFadeDuration="@integer/material_motion_duration_medium_1">


    <item android:state_selected="true">
        <shape android:shape="ring" android:useLevel="false" android:innerRadius="@dimen/dp0" android:thickness="@dimen/dp6">
            <solid android:color="@color/md_blue_A200"> </solid>
        </shape>
    </item>


    <item android:state_selected="false">
        <layer-list>
            <item>
                <shape android:shape="ring" android:useLevel="false" android:innerRadius="3dp" android:thickness="3dp">
                    <solid android:color="@color/md_blue_A200"> </solid>
                </shape>
            </item>
        </layer-list>
    </item>


</selector>